<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd" logicalFilePath="true">

    <changeSet id="users-create-table" author="typography" runOnChange="true">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="USERS"/>
            </not>
        </preConditions>
        <createTable tableName="USERS" remarks="Список пользователей приложения">
            <column name="ID" type="${ID}" remarks="id">
                <constraints primaryKey="true" nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="users-add-name" author="typography" runOnChange="true">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="USERS" columnName="NAME"/>
            </not>
        </preConditions>
        <addColumn tableName="USERS">
            <column name="NAME" remarks="Имя пользователя" type="VARCHAR2(50)"/>
        </addColumn>
    </changeSet>

</databaseChangeLog>