<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd" logicalFilePath="true">

    <changeSet id="order-subject-types-consumables-create-table" author="typography" runOnChange="true">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="ORDER_SUBJECT_TYPES_CONSUMABLES"/>
            </not>
        </preConditions>
        <createTable tableName="ORDER_SUBJECT_TYPES_CONSUMABLES" remarks="Предмет заказа">
            <column name="ID" type="${ID}" remarks="id">
                <constraints primaryKey="true" nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="order-subject-types-consumables-add-order-subject-type-id" author="typography" runOnChange="true">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="ORDER_SUBJECT_TYPES_CONSUMABLES" columnName="TYPE"/>
            </not>
        </preConditions>
        <addColumn tableName="ORDER_SUBJECT_TYPES_CONSUMABLES">
            <column name="ORDER_SUBJECT_TYPE_ID" remarks="Вид продукта/услуги" type="${ID}"/>
        </addColumn>
    </changeSet>

    <changeSet id="order-subject-types-consumables-add-consumable-item-id" author="typography" runOnChange="true">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="ORDER_SUBJECT_TYPES_CONSUMABLES" columnName="NAME"/>
            </not>
        </preConditions>
        <addColumn tableName="ORDER_SUBJECT_TYPES_CONSUMABLES">
            <column name="CONSUMABLE_ITEM_ID" remarks="Расходный материал" type="${ID}"/>
        </addColumn>
    </changeSet>

</databaseChangeLog>