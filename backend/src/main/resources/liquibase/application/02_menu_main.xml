<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd" logicalFilePath="true">

    <changeSet id="create-table-menu-main" author="typography" runOnChange="true">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="MENU_MAIN"/>
            </not>
        </preConditions>
        <createTable tableName="MENU_MAIN" remarks="Главное меню приложения">
            <column name="ID" type="${AUTOINCREMENT}" autoIncrement="true" remarks="id">
                <constraints primaryKey="true" nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="create-entry-code-in-menu-main" author="typography" runOnChange="true">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="MENU_MAIN" columnName="ENTRY_CODE"/>
            </not>
        </preConditions>
        <addColumn tableName="MENU_MAIN">
            <column name="ENTRY_CODE" remarks="Пункт меню" type="VARCHAR2(20)"/>
        </addColumn>
    </changeSet>

    <changeSet id="create-entry-in-menu-main" author="typography" runOnChange="true">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="MENU_MAIN" columnName="ENTRY"/>
            </not>
        </preConditions>
        <addColumn tableName="MENU_MAIN">
            <column name="ENTRY" remarks="Пункт меню" type="VARCHAR2(20)"/>
        </addColumn>
    </changeSet>

    <!-- ////////// DML ////////// -->

    <changeSet id="menu-main-insert-nomenclature" author="typography" runOnChange="true">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0">select count(*) from MENU_MAIN where ENTRY_CODE = 'NOMENCLATURE'</sqlCheck>
        </preConditions>
        <insert tableName="MENU_MAIN">
            <column name="ENTRY_CODE">NOMENCLATURE</column>
            <column name="ENTRY">Номенклатура</column>
        </insert>
    </changeSet>
</databaseChangeLog>